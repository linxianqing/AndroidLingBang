<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color1984D1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jump_search"
            android:layout_width="270dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/friend"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/friend"
            android:layout_toStartOf="@+id/friend"
            android:background="@color/cardview_shadow_start_color" />

        <ImageView
            android:id="@+id/bbbbbb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/jump_search"
            android:layout_alignLeft="@+id/jump_search"
            android:layout_alignStart="@+id/jump_search"
            android:layout_alignTop="@+id/jump_search"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:background="@drawable/ic_search_black_24dp" />

        <ImageView
            android:id="@+id/jiahao"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/jiahao" />

        <ImageView
            android:id="@+id/friend"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/jiahao"
            android:src="@drawable/tongxunlu" />

        <ImageView
            android:id="@+id/cccc"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/jump_search"
            android:layout_alignEnd="@+id/jump_search"
            android:layout_alignRight="@+id/jump_search"
            android:layout_alignTop="@+id/jump_search"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:drawable/ic_btn_speak_now" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/jump_search"
            android:layout_alignTop="@+id/jump_search"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/bbbbbb"
            android:layout_toRightOf="@+id/bbbbbb"
            android:text="TextView" />

